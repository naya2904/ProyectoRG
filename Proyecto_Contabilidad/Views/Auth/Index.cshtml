@{
    ViewData["Title"] = "Login";
}


<link rel="stylesheet" href="~/css/login.css" />
<!-- MONO CSS -->
<link id="main-css-href" rel="stylesheet" href="~/css/style.css" />

<style>
    a {
        cursor: pointer;
        color: #6dadff;
        text-decoration-line: none
    }
</style>

<div class="form-box body-login">
    <div class="header-text">
        RG ADVISORY GROUP
    </div>

    <form action="/index.html">

        <div class="form-group">
            <label for="email2">Correo</label>
            <input type="text" class="form-control input-lg" id="Username" aria-describedby="emailHelp"
                   placeholder="Usuario">
        </div>

        <div class="form-group">
            <label for="Userpassword">Contraseña</label>
            <input type="password" class="form-control input-lg" id="Userpassword" placeholder="Contraseña">
        </div>

        <a href="@Url.Action("RecoverPassword", "Auth")"> ¿Olvidaste tu contraseña? </a>

        <br />

        <button type="button" class="btn btn-primary btn-pill mb-4" onclick="login()">Ingresar</button>

    </form>

</div>

<script src="~/scripts/auth.js"></script>

