<script>
        // Función para obtener los datos del cliente por medio de una consulta GET
        function getCustomerDetails(customerId) {
            // Realizar una solicitud GET a tu API para obtener los detalles del cliente
            $.ajax({
                url: `https://localhost:7259/api/Customer/${customerId}`,
                type: 'GET',
                dataType: 'json',
                success: function (customer) {
                    // Actualizar el contenido del modal "Contacto" con los detalles del cliente
                    $('#modal-contact #customer-name').text(customer.customerName);
                    $('#modal-contact #customer-email-address').text(customer.emailAddress);
                    $('#modal-contact #customer-phone-number').text(customer.phoneNumber);
                    $('#modal-contact #customer-address').text(customer.customerAddress);
                    $('#modal-contact #customer-id').text(customer.customerID);
                    
                    // También puedes agregar una imagen del perfil del cliente aquí si tienes una URL
                    // $('#modal-contact #customer-profile-image').attr('src', customerProfileImageUrl);
                },
                error: function (error) {
                    console.error('Error al obtener los detalles del cliente:', error);
                }
            });
        }

        // Controlador de eventos para abrir el modal y obtener los detalles del cliente
        $('.card[data-toggle="modall"]').click(function () {
            var customerId = $(this).data('customer-id');
            getCustomerDetails(customerId);
        });

        function deleteCustomer(customerId) {
        // Realiza una solicitud HTTP DELETE a la API para eliminar el cliente
        $.ajax({
            url: `https://localhost:7259/api/Customer/${customerId}`,
            type: 'DELETE',
            success: function (data) {
                // Cliente eliminado exitosamente, puedes realizar alguna acción adicional si es necesario
                console.log(`Cliente con ID ${customerId} eliminado.`);
                // Recarga la página para actualizar la lista de clientes (puedes hacerlo de manera más eficiente actualizando la vista sin recargar)
                location.reload();
            },
            error: function (error) {
                // Ocurrió un error al eliminar el cliente
                console.error(`Error al eliminar el cliente con ID ${customerId}: ${error.responseText}`);
            }
        });
    }

    $(document).ready(function () {
     $('#modal-contact .btn-delete').click(function () {
    var customerId = $('#modal-contact #customer-id').text();
    deleteCustomer(customerId);
        });
    });
    
</script>





