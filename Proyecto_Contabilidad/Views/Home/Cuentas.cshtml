<script>
        function addAccount() {
    // Obtener los valores de los campos
    var AccountId = $("#accountId").val();
    var NameAccount = $("#nameAccount").val();
    var TypeAccount = $("#typeAccount").val();
    var conversionValue = $("#conversion").val();
    var conversionn = (conversionValue === "1") ? true : false;


    // Verificar si algún campo está vacío
    if (AccountId === "" || NameAccount === "" || TypeAccount === "" || conversionn === "") {
        alert("Todos los campos son obligatorios. Por favor, complete todos los campos.");
        return; // Detener la ejecución si hay campos vacíos
    }

    // Si todas las validaciones pasan, enviar los datos al servidor
var formData = {
    accountId: AccountId,
    accountName: NameAccount,
    accountType: TypeAccount,
    conversion: conversionn
};


    $.ajax({
        type: "POST",
        contentType: "application/json",
        url: "https://localhost:7259/api/Account",
        data: JSON.stringify(formData),
        dataType: "json",
        success: function (data) {
            // Procesar la respuesta si es necesario
            // Puedes mostrar un mensaje de éxito o actualizar la lista de clientes, por ejemplo
            $("#accountId").val("");
            $("#nameAccount").val("");
            $("#typeAccount").val("");
            $("#conversion").val("");
            location.reload();
        },
        error: function (error) {
            // Manejar errores si es necesario
            console.log(error);
        }
    });
}
</script>







